{
	"version": 2,
	"builds": [
		{
			"src": "nuxt.config.ts",
			"use": "@nuxtjs/vercel-builder",
			"config": {
				"serverFiles": [
					".nuxt/dist/server/**/*",
					".nuxt/dist/server/_nuxt/**/*",
					"server/**/*"
				],
				"generateStaticRoutes": true,
				"postcss": {
					"plugins": {
						"tailwindcss": {},
						"autoprefixer": {}
					}
				}
			}
		}
	],
	"routes": [
		{
			"src": "/sw.js",
			"continue": true,
			"headers": {
				"Cache-Control": "public, max-age=0, must-revalidate",
				"Service-Worker-Allowed": "/"
			}
		},
		{
			"src": "/_nuxt/(.*)",
			"headers": {
				"Cache-Control": "public,max-age=31536000,immutable"
			},
			"continue": true
		},
		{
			"src": "/(.*)",
			"dest": "/"
		}
	],
	"buildCommand": "NITRO_PRESET=vercel nuxt build",
	"outputDirectory": ".output/public"
}
